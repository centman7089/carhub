{
  "info": {
    "name": "CarHub Admin API",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Postman collection for testing User ↔ Dealer promotion and demotion APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login (Superadmin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth", "login"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"superadmin@example.com\",\n  \"password\": \"SuperSecure123\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const jsonData = pm.response.json();",
              "if (jsonData.token) {",
              "    pm.environment.set('token', jsonData.token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Promote User → Dealer",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/admin/promote/USER_ID_HERE",
          "host": ["{{base_url}}"],
          "path": ["admin", "promote", "USER_ID_HERE"]
        }
      },
      "response": []
    },
    {
      "name": "Demote Dealer → User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/admin/demote/DEALER_ID_HERE",
          "host": ["{{base_url}}"],
          "path": ["admin", "demote", "DEALER_ID_HERE"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" }
  ]
}
